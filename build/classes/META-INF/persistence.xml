<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HealthManagementPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>healthmanagement.entity.Department</class>
    <class>healthmanagement.entity.Staff</class>
    <class>healthmanagement.entity.StaffImage</class>
    <class>healthmanagement.entity.PatientImage</class>
    <class>healthmanagement.entity.Patient</class>
    <class>healthmanagement.entity.Records_patient_NurseLog</class>
    <class>healthmanagement.entity.Records_Patient</class>
    <class>healthmanagement.entity.Doctor</class>
    <class>healthmanagement.entity.DoctorImage</class>
    <class>healthmanagement.entity.Heap_Staff</class>
    <class>healthmanagement.entity.Heap_Dep</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/omanvico_healthmanager?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
